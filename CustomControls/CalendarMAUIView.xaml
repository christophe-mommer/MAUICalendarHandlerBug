<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CalendarHandlerBug.CustomControls.CalendarMAUIView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customControls="clr-namespace:CalendarHandlerBug.CustomControls"
    Title="CalendarMAUIView">
    <VerticalStackLayout>
        <customControls:CustomCalendar SelectedDate="{Binding Date}" />
        <Label
            HorizontalOptions="Center"
            Text="{Binding DateLbl}"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>